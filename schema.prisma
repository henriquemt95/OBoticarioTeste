datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  cpf       String
  password  String   
}

model Purchases {
  id        Int      @id @default(autoincrement())
  date      DateTime 
  code      String   
  value     String      
  cpf_user  String
  status    String     
}

model Log {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) 
  id_module Int   
  cpf_user  String
  content   String     
}

model Module {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) 
  name      String      
}
