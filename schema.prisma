generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  cpf       String   @unique
  password  String
  isAdmin   Boolean  @default(false)
}

model Purchases {
  id       Int      @id @default(autoincrement())
  date     DateTime
  code     String
  value    String
  cpf_user String
  status   String
}

model Log {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  id_module Int
  cpf_user  String
  content   String
}

model Module {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
}
